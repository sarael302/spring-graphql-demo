type Produit {
    id: ID
    nom: String
    prix: Float
    categorie: Categorie
}

type Categorie {
    id: ID
    nom: String
    produits: [Produit]
}
# ---- QUERY ----
type Query {
    produits: [Produit]
    produit(id: ID!): Produit
    categories: [Categorie]
    categorie(id: ID!): Categorie
}

# ---- INPUT ----
input ProduitInput {
    nom: String
    prix: Float
    categorieId: ID
}

input CategorieInput {
    nom: String
}

# ---- MUTATION ----
type Mutation {
    ajouterProduit(input: ProduitInput): Produit
    modifierProduit(id: ID!, input: ProduitInput): Produit
    supprimerProduit(id: ID!): Boolean

    ajouterCategorie(input: CategorieInput): Categorie
    supprimerCategorie(id: ID!): Boolean
}

